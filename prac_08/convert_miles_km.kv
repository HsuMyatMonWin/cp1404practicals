BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.8
            TextInput:
                id: input_number
                on_text: app.handle_convert(input_number.text)
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(input_number.text, -1)
#    BoxLayout:
#        Button:
#            text: "Convert miles to km"
#            on_press: app.handle_convert(input_number.text)
    BoxLayout:
        Label:
            id: output_number
            text: app.message